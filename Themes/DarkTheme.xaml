<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Lofi Dark Theme Colors -->
    <Color x:Key="PrimaryBackgroundColor">#1a1a1a</Color>
    <Color x:Key="SecondaryBackgroundColor">#2d2d2d</Color>
    <Color x:Key="TertiaryBackgroundColor">#3d3d3d</Color>
    <Color x:Key="PrimaryTextColor">#e8e8e8</Color>
    <Color x:Key="SecondaryTextColor">#b8b8b8</Color>
    <Color x:Key="AccentColor">#8b7355</Color>
    <Color x:Key="AccentHoverColor">#a68968</Color>
    <Color x:Key="BorderColor">#4a4a4a</Color>
    <Color x:Key="SuccessColor">#6b8e6b</Color>
    <Color x:Key="WarningColor">#d4a574</Color>
    <Color x:Key="DangerColor">#c17070</Color>

    <!-- Brushes -->
    <SolidColorBrush x:Key="PrimaryBackground" Color="{StaticResource PrimaryBackgroundColor}"/>
    <SolidColorBrush x:Key="SecondaryBackground" Color="{StaticResource SecondaryBackgroundColor}"/>
    <SolidColorBrush x:Key="TertiaryBackground" Color="{StaticResource TertiaryBackgroundColor}"/>
    <SolidColorBrush x:Key="PrimaryText" Color="{StaticResource PrimaryTextColor}"/>
    <SolidColorBrush x:Key="SecondaryText" Color="{StaticResource SecondaryTextColor}"/>
    <SolidColorBrush x:Key="Accent" Color="{StaticResource AccentColor}"/>
    <SolidColorBrush x:Key="AccentHover" Color="{StaticResource AccentHoverColor}"/>
    <SolidColorBrush x:Key="Border" Color="{StaticResource BorderColor}"/>
    <SolidColorBrush x:Key="Success" Color="{StaticResource SuccessColor}"/>
    <SolidColorBrush x:Key="Warning" Color="{StaticResource WarningColor}"/>
    <SolidColorBrush x:Key="Danger" Color="{StaticResource DangerColor}"/>

</ResourceDictionary>
