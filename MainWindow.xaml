<Window x:Class="TamagotchiTodo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Tamagotchi Todo" Height="700" Width="900"
        Background="{DynamicResource PrimaryBackground}"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResizeWithGrip">

    <Window.Resources>
        <!-- Stat Bar Style -->
        <Style x:Key="StatBarStyle" TargetType="ProgressBar">
            <Setter Property="Height" Value="24"/>
            <Setter Property="BorderBrush" Value="{DynamicResource Border}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="{DynamicResource SecondaryBackground}"/>
        </Style>

        <!-- Button Style -->
        <Style x:Key="LofiButton" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource Accent}"/>
            <Setter Property="Foreground" Value="{DynamicResource PrimaryText}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource Border}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource AccentHover}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- TextBox Style -->
        <Style x:Key="LofiTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="{DynamicResource SecondaryBackground}"/>
            <Setter Property="Foreground" Value="{DynamicResource PrimaryText}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource Border}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Tamagotchi Todo"
                       FontSize="28"
                       FontWeight="Bold"
                       Foreground="{DynamicResource PrimaryText}"/>

            <Button Grid.Column="1"
                    Content="Toggle Theme"
                    Style="{StaticResource LofiButton}"
                    Click="ToggleTheme_Click"
                    Padding="16,8"/>
        </Grid>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.2*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <!-- Tamagotchi Panel -->
            <Border Grid.Column="0"
                    Background="{DynamicResource SecondaryBackground}"
                    BorderBrush="{DynamicResource Border}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="20">
                <StackPanel>
                    <TextBlock Text="Your Pet"
                               FontSize="20"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource PrimaryText}"
                               Margin="0,0,0,15"/>

                    <!-- Pet Display -->
                    <Border Background="{DynamicResource TertiaryBackground}"
                            BorderBrush="{DynamicResource Border}"
                            BorderThickness="1"
                            CornerRadius="6"
                            Height="180"
                            Margin="0,0,0,20">
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="{Binding Pet.Name}"
                                       FontSize="24"
                                       FontWeight="Bold"
                                       HorizontalAlignment="Center"
                                       Foreground="{DynamicResource PrimaryText}"/>
                            <TextBlock x:Name="MoodText"
                                       Text="{Binding Pet.Mood}"
                                       FontSize="16"
                                       HorizontalAlignment="Center"
                                       Foreground="{DynamicResource SecondaryText}"
                                       Margin="0,5,0,0"/>
                            <TextBlock Text="(=^･ω･^=)"
                                       FontSize="48"
                                       HorizontalAlignment="Center"
                                       Foreground="{DynamicResource Accent}"
                                       Margin="0,10,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Stats Panel -->
                    <TextBlock Text="Stats"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource PrimaryText}"
                               Margin="0,0,0,10"/>

                    <StackPanel x:Name="StatsPanel">
                        <!-- Stats will be dynamically added here -->
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Tasks Panel -->
            <Border Grid.Column="2"
                    Background="{DynamicResource SecondaryBackground}"
                    BorderBrush="{DynamicResource Border}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Tasks Header -->
                    <TextBlock Text="Tasks"
                               FontSize="20"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource PrimaryText}"
                               Margin="0,0,0,15"/>

                    <!-- Add Task Button -->
                    <Button Grid.Row="1"
                            Content="+ Add New Task"
                            Style="{StaticResource LofiButton}"
                            Click="AddTask_Click"
                            HorizontalAlignment="Stretch"
                            Padding="12,10"
                            Margin="0,0,0,15"
                            FontSize="14"/>

                    <!-- Task Tabs -->
                    <TabControl Grid.Row="2"
                                Background="Transparent"
                                BorderBrush="{DynamicResource Border}">
                        <TabControl.Resources>
                            <Style TargetType="TabItem">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="TabItem">
                                            <Border Name="Border"
                                                    Background="{DynamicResource TertiaryBackground}"
                                                    BorderBrush="{DynamicResource Border}"
                                                    BorderThickness="1,1,1,0"
                                                    CornerRadius="6,6,0,0"
                                                    Padding="15,8"
                                                    Margin="0,0,5,0">
                                                <ContentPresenter ContentSource="Header"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter TargetName="Border" Property="Background" Value="{DynamicResource SecondaryBackground}"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </TabControl.Resources>

                        <!-- Active Tasks Tab -->
                        <TabItem>
                            <TabItem.Header>
                                <TextBlock Text="Active" Foreground="{DynamicResource PrimaryText}"/>
                            </TabItem.Header>
                            <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0,10,0,0">
                                <ItemsControl x:Name="ActiveTasksList" ItemsSource="{Binding TaskService.ActiveTasks}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="{DynamicResource TertiaryBackground}"
                                                    BorderBrush="{DynamicResource Border}"
                                                    BorderThickness="1"
                                                    CornerRadius="6"
                                                    Padding="12"
                                                    Margin="0,0,0,10">
                                                <Grid>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                    </Grid.RowDefinitions>

                                                    <TextBlock Text="{Binding Title}"
                                                               FontWeight="SemiBold"
                                                               FontSize="14"
                                                               Foreground="{DynamicResource PrimaryText}"/>

                                                    <TextBlock Grid.Row="1"
                                                               Text="{Binding Description}"
                                                               TextWrapping="Wrap"
                                                               Foreground="{DynamicResource SecondaryText}"
                                                               Margin="0,5,0,8"
                                                               FontSize="12"/>

                                                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
                                                        <Button Content="Complete"
                                                                Style="{StaticResource LofiButton}"
                                                                Click="CompleteTask_Click"
                                                                Tag="{Binding}"
                                                                Padding="10,5"
                                                                FontSize="11"
                                                                Margin="0,0,8,0"/>
                                                        <Button Content="Delete"
                                                                Style="{StaticResource LofiButton}"
                                                                Click="DeleteTask_Click"
                                                                Tag="{Binding}"
                                                                Padding="10,5"
                                                                FontSize="11"/>
                                                    </StackPanel>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </TabItem>

                        <!-- Completed Tasks Tab -->
                        <TabItem>
                            <TabItem.Header>
                                <TextBlock Text="Completed" Foreground="{DynamicResource PrimaryText}"/>
                            </TabItem.Header>
                            <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0,10,0,0">
                                <ItemsControl x:Name="CompletedTasksList" ItemsSource="{Binding TaskService.CompletedTasks}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="{DynamicResource TertiaryBackground}"
                                                    BorderBrush="{DynamicResource Border}"
                                                    BorderThickness="1"
                                                    CornerRadius="6"
                                                    Padding="12"
                                                    Margin="0,0,0,10"
                                                    Opacity="0.7">
                                                <Grid>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                    </Grid.RowDefinitions>

                                                    <TextBlock Text="{Binding Title}"
                                                               FontWeight="SemiBold"
                                                               FontSize="14"
                                                               Foreground="{DynamicResource PrimaryText}"
                                                               TextDecorations="Strikethrough"/>

                                                    <Button Grid.Row="1"
                                                            Content="Restore"
                                                            Style="{StaticResource LofiButton}"
                                                            Click="RestoreTask_Click"
                                                            Tag="{Binding}"
                                                            HorizontalAlignment="Right"
                                                            Padding="10,5"
                                                            FontSize="11"
                                                            Margin="0,8,0,0"/>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </TabItem>
                    </TabControl>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
